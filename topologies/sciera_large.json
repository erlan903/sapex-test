{
    "_metadata": {
        "description": "SCIERA topology — ISD 71 with 4 core ASes, 12 leaf ASes, + ISD 64 Anapaya gateway",
        "reference": "https://sciera.readthedocs.io/en/latest/",
        "structure": "Single ISD 71 spanning EU, US, Asia. Core ASes are NRENs (GEANT, SWITCH, Internet2, KISTI). Connected to ISD 64 (Anapaya production) via peering.",
        "link_parameters": "Core links: 15-150ms, 10Gbps. Parent-child uplinks: 2-50ms, 1Gbps. Inter-ISD peering: 2ms, 10Gbps.",
        "as_numbering": "Core NRENs use real BGP ASNs (GEANT=20965, SWITCH=559, Internet2=11537, KISTI=1781). Leaf university ASes use SCION-only numbers (2:0:xx range)."
    },

    "71-20965": {
        "core": true,
        "comment": "GEANT — EU Hub (PoPs: Frankfurt, Paris). Primary SCIERA core, gateway to ISD 64.",
        "border_routers": {
            "br-fra-1": {
                "comment": "Frankfurt PoP — downlinks to DFN-connected universities",
                "interfaces": [
                    {"isd_as": "71-2:0:1a", "neighbor_router": "br-ovgu-1", "latency_ms": 8, "bandwidth_mbps": 1000},
                    {"isd_as": "71-2:0:1b", "neighbor_router": "br-tub-1", "latency_ms": 5, "bandwidth_mbps": 1000},
                    {"isd_as": "71-2:0:1c", "neighbor_router": "br-lmu-1", "latency_ms": 5, "bandwidth_mbps": 1000},
                    {"isd_as": "71-2:0:1d", "neighbor_router": "br-kit-1", "latency_ms": 3, "bandwidth_mbps": 1000}
                ]
            },
            "br-fra-2": {
                "comment": "Frankfurt PoP — core links to other NRENs + inter-ISD peering to Anapaya",
                "interfaces": [
                    {"isd_as": "71-559", "neighbor_router": "br-switch-1", "latency_ms": 15, "bandwidth_mbps": 10000},
                    {"isd_as": "71-11537", "neighbor_router": "br-i2-2", "latency_ms": 85, "bandwidth_mbps": 10000},
                    {"isd_as": "71-1781", "neighbor_router": "br-kisti-2", "latency_ms": 150, "bandwidth_mbps": 10000},
                    {"isd_as": "64-58057", "neighbor_router": "br-ana-1", "latency_ms": 2, "bandwidth_mbps": 10000}
                ]
            },
            "br-par-1": {
                "comment": "Paris PoP — downlink to Renater-connected institutions",
                "interfaces": [
                    {"isd_as": "71-2:0:26", "neighbor_router": "br-sorb-1", "latency_ms": 5, "bandwidth_mbps": 1000}
                ]
            }
        },
        "hosts": {
            "geant-mgmt": {"addr": "10.71.0.1"}
        }
    },

